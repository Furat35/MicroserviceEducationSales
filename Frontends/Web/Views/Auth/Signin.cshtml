@model SigninInput

<h1 class="text-center mb-5">Sign In</h1>

<div class="form-signin w-25 m-auto">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form asp-controller="Auth" asp-action="Signin" method="post">
        <div class="form-floating">
            <input value="firat@hotmail.com" type="email" asp-for="Email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email"></label>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input value="Firat*123" type="password" class="form-control" asp-for="Password" placeholder="Password">
            <label asp-for="Password">Password</label>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" asp-for="IsRemember">
            <label class="form-check-label" asp-for="IsRemember">
                Remember me
            </label>
            <span class="text-danger" asp-validation-for="IsRemember"></span>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    </form>
</div>