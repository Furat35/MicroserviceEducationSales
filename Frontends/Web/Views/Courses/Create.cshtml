@model Web.Models.Catalogs.CourseCreateInput

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h5>Kurs Ekleme</h5>
        <form asp-controller="Courses" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="mb-3">
                <label class="form-label" asp-for="CategoryId"></label>
                <select class="form-control" asp-items="@ViewBag.categoryList" asp-for="CategoryId">
                    <option value="">Kategori seçiniz</option>
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Feature.Duration"></label>
                <input asp-for="Feature.Duration" class="form-control" />
                <span class="text-danger" asp-validation-for="Feature.Duration"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="PhotoFormFile"></label>
                <input type="file" asp-for="PhotoFormFile" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Kurs Kaydet</button>
        </form>
    </div>
</div>