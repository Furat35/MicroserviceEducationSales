@model List<Web.Models.Catalogs.CourseViewModel>
<h5>Kurslar</h5>
<div><a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Kurs oluştur</a></div>
@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Kurs İsmi</th>
                <th>Fiyat</th>
                <th>Süre</th>
                <th>Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td><img style="width:70px" src="@course.StockPictureUrl" class="img-thumbnail" asp-append-version="true"/></td>
                    <td>@course.Name</td>
                    <td>@course.Price</td>
                    <td>@course.Feature.Duration</td>
                    <td>@course.Category.Name</td>
                    <td><a asp-controller="Courses" asp-action="Update" asp-route-id="@course.Id" class="btn btn-success btn-sm">Güncelle</a>
                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Kayıtlı kurs bulunamadı.</div>
}
