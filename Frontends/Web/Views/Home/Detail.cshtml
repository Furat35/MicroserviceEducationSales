@model Web.Models.Catalogs.CourseViewModel

<div class="row">
    <div class="col-9 mb-3">
        <div class="card">
            <img src="@Model.StockPictureUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <div class="badge bg-primary">Kategori : @Model.Category.Name</div>
                <p class="card-text">@Model.Description</p>
                <h4>@Model.Price TL</h4>
            </div>
        </div>
    </div>
    <div class="col-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Fiyat : @Model.Price TL</h5>
                <div class="d-grid">
                    <a class="btn btn-primary btn-block" asp-controller="Baskets" asp-action="AddBasketItem" asp-route-courseId="@Model.Id">Sepete Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
