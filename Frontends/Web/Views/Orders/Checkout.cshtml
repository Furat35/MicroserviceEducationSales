@model CheckoutInfoInput
<form asp-controller="Orders" asp-action="Checkout">
    <div class="row">
        <div class="col-md-8">
            <h5>Adres Bilgileri</h5>
            <div class="mb-3">
                <label class="form-label" asp-for="Province"></label>
                <input asp-for="Province" class="form-control" />

                <div class="mb-3">
                    <label class="form-label" asp-for="District"></label>
                    <input asp-for="District" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Street"></label>
                    <input asp-for="Street" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Line"></label>
                    <input asp-for="Line" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="ZipCode"></label>
                    <input asp-for="ZipCode" class="form-control" />
                </div>
            </div>
            <h5>Ödeme Bilgileri</h5>

            <div class="mb-3">
                <label class="form-label" asp-for="CardName"></label>
                <input asp-for="CardName" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="CardNumber"></label>
                <input asp-for="CardNumber" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Expiration"></label>
                <input asp-for="Expiration" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="CVV"></label>
                <input asp-for="CVV" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5>Ödeme Özeti</h5>
                    <table class="table table-striped">
                        @foreach (var item in ViewBag.basket.BasketItems as List<BasketItemViewModel>)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.Price</td>
                            </tr>
                        }
                        <tr>
                            <td>@(ViewBag.basket.HasDiscount ? "İndirimli toplam fiyat" : "Toplam fiyat")</td>
                            <td>@ViewBag.basket.TotalPrice TL</td>
                        </tr>
                    </table>
                    <button type="submit" class="btn btn-success">Ödemeyi Tamamla</button>
                </div>
            </div>
        </div>
    </div>
</form>